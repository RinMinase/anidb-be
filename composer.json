{
    "name": "rin-anidb/anidb-be",
    "description": "Rin Minase's AniDB API Service utilizing Laravel deployed to Heroku",
    "type": "project",
    "license": "ISC",
    "keywords": [
        "laravel",
        "docker",
        "heroku",
        "restful-api"
    ],
    "authors": [
        {
            "name": "Rin Minase",
            "email": "rin.black.raison.detre@gmail.com",
            "homepage": "https://anidb.netlify.com",
            "role": "Full Stack Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "cloudinary-labs/cloudinary-laravel": "~2.2.3",
        "darkaonline/l5-swagger": "~8.6.3",
        "laravel/framework": "~11.41.3",
        "laravel/sanctum": "~4.0.8",
        "loilo/fuse": "~7.0.1",
        "nesbot/carbon": "~3.8.4"
    },
    "require-dev": {
        "nunomaduro/collision": "~8.6.1",
        "phpunit/phpunit": "~11.5.5",
        "spatie/laravel-ignition": "~2.9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "bootstrap/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-deployment": [
            "php artisan cache:clear",
            "php artisan config:cache",
            "php artisan route:cache"
        ],
        "docs": [
            "@php artisan l5-swagger:generate"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
