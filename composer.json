{
    "name": "rin-anidb/anidb-be",
    "description": "Rin Minase's Anime Database API Service utilizing Lumen 5.8 by Laravel and Mongo DB Atlas and is deployed to Heroku.",
    "keywords": [
        "laravel",
        "lumen",
        "mongodb-atlas",
        "docker",
        "heroku",
        "restful-api",
        "phpunit"
    ],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Rin Minase",
            "email": "rin.black.raison.detre@gmail.com",
            "homepage": "https://anidb.netlify.com",
            "role": "Full Stack Developer"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "fabpot/goutte": "^3.2",
        "guzzlehttp/guzzle": "^6.4",
        "kreait/firebase-php": "^4.35.1",
        "kriswallsmith/buzz": "^1.0",
        "laravel/lumen-framework": "^6.2.0",
        "mailgun/mailgun-php": "^3.0",
        "mongodb/mongodb": "1.4.3",
        "nyholm/psr7": "^1.2",
        "phpoffice/phpspreadsheet": "^1.9"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.8.0",
        "phpunit/phpunit": "^8.4.3",
        "mockery/mockery": "^1.2.4"
    },
    "autoload": {
        "files": [
            "bootstrap/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "rm -f public/deploy-status",
            "mkdir -p storage/framework/cache && mkdir -p storage/framework/views"
        ],
        "post-autoload-dump": [
            "touch public/deploy-status"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": [
            "phpunit -c tests/phpunit.xml; rm tests/.phpunit.result.cache"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
