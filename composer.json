{
    "name": "rin-anidb/anidb-be",
    "description": "Rin Minase's Anime Database API Service utilizing Lumen 7 by Laravel and Mongo DB Atlas and is deployed to Heroku.",
    "keywords": [
        "laravel",
        "lumen",
        "docker",
        "heroku",
        "restful-api",
        "phpunit"
    ],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Rin Minase",
            "email": "rin.black.raison.detre@gmail.com",
            "homepage": "https://anidb.netlify.com",
            "role": "Full Stack Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "kreait/firebase-php": "^5.11",
        "laravel/lumen-framework": "^8.2",
        "mailgun/mailgun-php": "^3.1",
        "nyholm/psr7": "^1.3",
        "phpoffice/phpspreadsheet": "^1.13",
        "symfony/dom-crawler": "^5.1",
        "symfony/http-client": "^5.1"
    },
    "require-dev": {
        "filp/whoops": "^2.9",
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "files": [
            "bootstrap/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "rm -f public/deploy-status",
            "mkdir -p storage/framework/cache && mkdir -p storage/framework/views"
        ],
        "post-autoload-dump": [
            "npm i || npm run docs || true",
            "touch public/deploy-status"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "docs": [
            "npm i || npm run docs || true"
        ],
        "test": [
            "phpunit -c tests/phpunit.xml"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
