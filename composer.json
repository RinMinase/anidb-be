{
    "name": "rin-anidb/anidb-be",
    "description": "Rin Minase's AniDB API Service utilizing Laravel deployed to Heroku",
    "type": "project",
    "license": "ISC",
    "keywords": [
        "laravel",
        "docker",
        "heroku",
        "restful-api"
    ],
    "authors": [
        {
            "name": "Rin Minase",
            "email": "rin.black.raison.detre@gmail.com",
            "homepage": "https://anidb.netlify.com",
            "role": "Full Stack Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "cloudinary/cloudinary_php": "~3.1.0",
        "darkaonline/l5-swagger": "~9.0.1",
        "laravel/framework": "~11.44.2",
        "laravel/sanctum": "~4.0.8",
        "nesbot/carbon": "~3.8.6",
        "tpetry/laravel-postgresql-enhanced": "~2.3.4"
    },
    "require-dev": {
        "nunomaduro/collision": "~8.6.1",
        "phpunit/phpunit": "~11.5.12",
        "spatie/laravel-ignition": "~2.9.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "bootstrap/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-deployment": [
            "@php artisan cache:clear",
            "@php artisan config:cache",
            "@php artisan route:cache"
        ],
        "docs": [
            "@php artisan l5-swagger:generate"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {}
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
