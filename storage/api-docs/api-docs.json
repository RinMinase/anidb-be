    "paths": {
        "/api/auth/register": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "User Registration",
                "operationId": "31cfdf7ad0b73495ed2b7bb54e9d8a54",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "email"
                        },
                        "example": "user@mail.com"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "password"
                    },
                    {
                        "name": "password_confirmation",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "password"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "number"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "properties": {
                                                "token": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                },
                                "example": {
                                    "status": 200,
                                    "message": "Success",
                                    "data": {
                                        "token": "alphanumeric token"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Unauthorized"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Failed"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "User Login",
                "operationId": "d7cbb3ac96888b0e21dcf8ee1845fe40",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "email"
                        },
                        "example": "user@mail.com"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "password"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "number"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "properties": {
                                                "token": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                },
                                "example": {
                                    "status": 200,
                                    "message": "Success",
                                    "data": {
                                        "token": "alphanumeric token"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid Form or Invalid Credentials",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "number"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                },
                                "examples": {
                                    "InvalidForm": {
                                        "summary": "Invalid Form",
                                        "value": {
                                            "status": 400,
                                            "data": {
                                                "email": [
                                                    [
                                                        "The email field is required."
                                                    ]
                                                ],
                                                "password": [
                                                    [
                                                        "The password field is required."
                                                    ]
                                                ]
                                            }
                                        }
                                    },
                                    "InvalidCredentials": {
                                        "summary": "Invalid Credentials",
                                        "value": {
                                            "status": 400,
                                            "message": "username or password is invalid"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "User Logout",
                "operationId": "7bdaf2cc85f771edf0ea8b95bb8dbac1",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Success"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Unauthorized"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/user": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get User",
                "operationId": "b8424f088ab85f004529540f377aa681",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "number"
                                        },
                                        "email": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                },
                                "example": {
                                    "id": 1,
                                    "email": "test@mail.com"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Unauthorized"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "token": []
                    }
                ]
            }
        },
        "/api/logs": {
            "get": {
                "tags": [
                    "Logs"
                ],
                "summary": "Get All Logs",
                "operationId": "6897ba59c8c4db4a9466e5df41a9c4e0",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Log"
                                            }
                                        },
                                        "meta": {
                                            "$ref": "#/components/schemas/Pagination"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Unauthorized"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Success": {
                "title": "Default Success Response",
                "properties": {
                    "status": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "type": "object",
                "example": {
                    "status": "200",
                    "message": "Success"
                }
            },
            "Unauthorized": {
                "title": "401 Forbidden Error Response",
                "properties": {
                    "status": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "type": "object",
                "example": {
                    "status": "401",
                    "message": "Unauthorized"
                }
            },
            "Failed": {
                "title": "500 Internal Server Error Response",
                "properties": {
                    "status": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "type": "object",
                "example": {
                    "status": "500",
                    "message": "Failed"
                }
            },
            "Pagination": {
                "title": "Pagination Meta",
                "properties": {
                    "meta": {
                        "properties": {
                            "page": {
                                "type": "integer",
                                "format": "int32",
                                "minimum": 1
                            },
                            "limit": {
                                "type": "integer",
                                "format": "int32",
                                "minimum": 1
                            },
                            "total": {
                                "type": "integer",
                                "format": "int32",
                                "minimum": 1
                            },
                            "has_next": {
                                "type": "boolean"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object",
                "example": {
                    "meta": {
                        "page": 1,
                        "limit": 30,
                        "total": 5,
                        "has_next": true
                    }
                }
            },
            "Log": {
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "table_changed": {
                        "type": "string"
                    },
                    "id_changed": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "action": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object",
                "example": {
                    "id": "9ef81943-78f0-4d1c-a831-a59fb5af339c",
                    "table_changed": "marathon",
                    "id_changed": 1,
                    "description": "title changed from 'old' to 'new'",
                    "action": "add",
                    "created_at": "2020-01-01 00:00:00"
                }
            }
        },
        "securitySchemes": {
            "token": {
                "type": "http",
                "description": "Login with email and password to get the authentication token",
                "name": "Authorization",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}
